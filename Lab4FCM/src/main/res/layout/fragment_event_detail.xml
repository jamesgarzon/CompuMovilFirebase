<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.udea.gr06_20171compumovil.lab4.fragments.EventDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/event_detail_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/event_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_picture"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:gravity="center"
        android:hint="Nombre Evento"
        android:textColor="#4D0D64"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/event_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Descripcion ...evento"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/event_detail_rating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/event_detail_rating"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:elevation="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="@color/colorRating"
        android:scaleX="0.5"
        android:scaleY="0.5" />


</LinearLayout>
